<h1>All Pets</h1>

<% if @shelter %>
  <p><%= link_to "Add Pet", "/shelters/#{@shelter.id}/pets/new" %></p>
<% end %>

<% @pets.each do |pet| %>
  <section id="pet-<%= pet.id %>">
    <p><%= image_tag pet.image %></p>
    <p><%= link_to pet.name, "pets/#{pet.id}" %></p>
    <p><%= pet.approximate_age %></p>
    <p><%= pet.sex %></p>
    <p><%= link_to pet.shelter_name, "/shelters/#{pet.shelter_id}" %></p>
    <p><%= link_to "Update", "/pets/#{pet.id}/edit" %></p>
    <p><%= link_to "Delete", "/pets/#{pet.id}", method: "delete" %></p>
  </section>
<% end %>
